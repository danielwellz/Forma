# App
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-a-long-random-secret

# Database
DATABASE_URL=postgresql://forma:forma@localhost:5432/forma?schema=public

# SMTP (Mailpit local defaults)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_FROM="Forma <noreply@forma.ir>"

# S3 / MinIO
MINIO_ROOT_USER=formaadmin
MINIO_ROOT_PASSWORD=change-this-strong
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=forma
S3_ACCESS_KEY=formaadmin
S3_SECRET_KEY=change-this-strong
S3_PUBLIC_BASE_URL=http://localhost:9000/forma

# Rate limiting / cron
RATE_LIMIT_DISABLED=true
RATE_LIMIT_ENFORCE_DEV=false
CRON_SECRET=replace-with-cron-secret

# Optional analytics
PLAUSIBLE_DOMAIN=
NEXT_PUBLIC_GA_ID=

# Optional seed overrides
SEED_ADMIN_EMAIL=admin@forma.ir
SEED_ADMIN_PASSWORD=FormaAdmin123!
