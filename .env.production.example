# Runtime
NODE_ENV=production
NEXTAUTH_URL=https://forma.example.com
NEXT_PUBLIC_SITE_URL=https://forma.example.com
NEXTAUTH_SECRET=replace-with-long-random-secret

# Database
POSTGRES_DB=forma
POSTGRES_USER=forma
POSTGRES_PASSWORD=replace-with-strong-db-password
DATABASE_URL=postgresql://forma:replace-with-strong-db-password@db:5432/forma?schema=public

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=mailer@example.com
SMTP_PASS=replace-with-smtp-pass
SMTP_SECURE=true
SMTP_FROM="Forma <noreply@forma.example.com>"

# S3 (MinIO or AWS S3-compatible)
# For MinIO in docker-compose.prod with profile=minio: S3_ENDPOINT=http://minio:9000
# For AWS S3: S3_ENDPOINT=https://s3.<region>.amazonaws.com
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=forma
S3_ACCESS_KEY=replace-with-s3-access-key
S3_SECRET_KEY=replace-with-s3-secret
S3_PUBLIC_BASE_URL=https://cdn.forma.example.com/forma

# MinIO (only needed when running with --profile minio)
MINIO_ROOT_USER=formaadmin
MINIO_ROOT_PASSWORD=replace-with-strong-minio-password

# Security / Ops
CRON_SECRET=replace-with-cron-secret
RATE_LIMIT_DISABLED=false
RATE_LIMIT_ENFORCE_DEV=false

# Optional analytics
PLAUSIBLE_DOMAIN=
NEXT_PUBLIC_GA_ID=
